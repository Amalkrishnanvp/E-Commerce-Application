<section class="mx-auto mt-6 max-w-7xl flex-1 space-y-6 lg:mt-0 lg:w-full py-8">
    {{!-- <div class="space-y-4 rounded-lg border border-gray-200 bg-white p-4 shadow-sm"> --}}
        <h2 class="text-xl font-semibold text-gray-900 sm:text-2xl pb-4">Orders</h2>




        {{#each orders}}
        <!-- Order Information Section -->
        <div class="space-y-4 pt-5 dark:border-gray-700 dark:bg-gray-800 p-4 sm:p-6 rounded-lg shadow-sm">

            <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
                <div>
                    <h3 class="text-lg font-medium text-gray-900 dark:text-white">Order Summary</h3>
                    <dl class="mt-2 space-y-2">
                        <div class="flex items-center justify-between">
                            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Order Number</dt>
                            <dd class="text-sm text-gray-900 dark:text-white">{{addOne @index}}</dd>
                        </div>
                        <div class="flex items-center justify-between">
                            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Order Date</dt>
                            <dd class="text-sm text-gray-900 dark:text-white"> {{formatDate this.date}}</dd>
                        </div>
                        <div class="flex items-center justify-between">
                            <dt class="text-sm font-medium text-gray-400">Order Status</dt>
                            <dd class="text-sm font-medium">
                                <span class="px-2 py-1 rounded-full text-white">
                                    {{this.status}}
                                </span>
                            </dd>
                        </div>
                        <div class="flex items-center justify-between">
                            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Payment Method</dt>
                            <dd class="text-sm text-gray-900 dark:text-white">{{this.paymentMethod}}</dd>
                        </div>
                    </dl>
                </div>

                <div>
                    <h3 class="text-lg font-medium text-gray-900 dark:text-white">Delivery Information</h3>
                    <dl class="mt-2 space-y-2">
                        <div class="flex items-center justify-between">
                            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Address</dt>
                            <dd class="text-sm text-gray-900 dark:text-white"> {{this.deliveryDetails.address}}</dd>
                        </div>
                        <div class="flex items-center justify-between">
                            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Pincode</dt>
                            <dd class="text-sm text-gray-900 dark:text-white">{{this.deliveryDetails.pincode}}</dd>
                        </div>
                        <div class="flex items-center justify-between">
                            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Mobile</dt>
                            <dd class="text-sm text-gray-900 dark:text-white"> {{this.deliveryDetails.mobile}}</dd>
                        </div>
                    </dl>
                </div>
            </div>

            <!-- Order Items Section -->
            <div class="mt-6">
                <h3 class="text-lg font-medium text-gray-900 dark:text-white">Order Items</h3>
                <div class="mt-4 space-y-4">
                    {{#each this.products}}
                    <div class="flex items-center rounded-lg border border-gray-200 p-4 dark:border-gray-700">
                        <img class="h-16 w-16 rounded-md object-cover" src="{{this.item.ImagePath}}"
                            alt="{{this.item.Name}}">
                        <div class="ml-4 flex-1">
                            <h4 class="text-sm font-medium text-gray-900 dark:text-white">{{this.item.Name}}</h4>
                            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Quantity: {{this.quantity}}</p>
                        </div>
                        <div class="text-sm font-medium text-gray-900 dark:text-white">₹{{this.item.Price}}</div>
                    </div>
                    {{/each}}
                </div>
            </div>

            <!-- Payment Summary Section -->
            <div class="mt-6 space-y-2">
                <h3 class="text-lg font-medium text-gray-900 dark:text-white">Payment Summary</h3>
                <dl class="space-y-2">
                    <div class="flex items-center justify-between">
                        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Subtotal</dt>
                        <dd class="text-sm text-gray-900 dark:text-white">₹{{this.totalAmount}}</dd>
                    </div>
                    <div class="flex items-center justify-between">
                        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Shipping</dt>
                        <dd class="text-sm text-gray-900 dark:text-white">₹0</dd>
                    </div>
                    <div class="flex items-center justify-between">
                        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Tax</dt>
                        <dd class="text-sm text-gray-900 dark:text-white">₹0</dd>
                    </div>
                    <div class="flex items-center justify-between border-t border-gray-200 pt-2 dark:border-gray-700">
                        <dt class="text-base font-bold text-gray-900 dark:text-white">Total</dt>
                        <dd class="text-base font-bold text-gray-900 dark:text-white">₹{{this.totalAmount}}</dd>
                    </div>
                </dl>
            </div>

            <!-- Action Buttons -->
            <div class="mt-6 flex flex-col space-y-3 sm:flex-row sm:space-x-3 sm:space-y-0">
                <a href="/view-order-products/{{this._id}}"
                    class="flex items-center justify-center rounded-lg border border-gray-300 bg-white px-4 py-2.5 text-sm font-medium text-gray-700 hover:bg-gray-50">
                    View Products
                </a>
