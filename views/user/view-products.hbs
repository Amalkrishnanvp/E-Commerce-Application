    {{!-- Row 1 --}}
    <div class="bg-white">
        <div class="mx-auto max-w-2xl px-4 py-8 sm:px-6 lg:max-w-7xl lg:px-8">

            <h2 class="font-semibold pb-4 text-2xl">Products</h2>

            <div class="grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 xl:gap-x-8 mt-4">
                {{#each products}}
                {{#ifEquals this.Category "product"}}
                <div>
                    <div
                        class="aspect-h-1 aspect-w-1 w-full overflow-hidden rounded-lg bg-gray-200 xl:aspect-h-16 xl:aspect-w-16">
                        <img src="{{this.ImagePath}}"
                            alt="Tall slender porcelain bottle with natural clay textured body and cork stopper."
                            class="h-full w-full object-cover object-center group-hover:opacity-75">
                    </div>
                    <div class="flex justify-between mt-7 items-center">
                        <div>
                            <h3 class="text-sm text-gray-700">{{this.Name}}</h3>
                            <p class="mt-2 text-lg font-medium text-gray-900">₹{{this.Price}}</p>
                        </div>
                        <div class="flex flex-col justify-center">
                            <h4 class="text-sm text-right text-gray-700">{{this.Category}}</h4>
                            <button onclick="addToCart('{{this._id}}')" class="bg-custom-color-1 hover:bg-custom-color-2 text-white font-semibold py-2 px-3
                                    rounded h-8 text-sm flex items-center mt-2">
                                Add to Cart
                            </button>
                        </div>
                    </div>
                </div>
                {{/ifEquals}}

                {{/each}}

                <!-- More products... -->
            </div>



        </div>
    </div>

