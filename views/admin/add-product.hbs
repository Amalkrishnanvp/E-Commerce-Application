<section class="my-10 md:my-8 px-5 md:px-4">
    
    <h2 class="text-center text-2xl font-semibold mb-4">Add Product</h2>
    <form class="max-w-sm mx-auto" action="/admin/add-product" method="POST" enctype="multipart/form-data">
        <div class="mb-4">
            <label for="name" class="block mb-2 text-sm font-medium text-gray-900">Name</label>
            <input type="text" id="name" name="Name"
                class="border border-gray-600 text-gray-900 text-sm rounded-lg block w-full p-2.5" placeholder=""
                required />
        </div>
        <div class="mb-4">
            <label for="category" class="block mb-2 text-sm font-medium text-gray-900">Category</label>
            <input type="text" id="category" name="Category"
                class="border border-gray-600 text-gray-900 text-sm rounded-lg block w-full p-2.5" placeholder=""
                required />
        </div>
        <div class="mb-4">
            <label for="price" class="block mb-2 text-sm font-medium text-gray-900">Price</label>
            <input type="number" id="price" name="Price"
                class="border border-gray-600 text-gray-900 text-sm rounded-lg block w-full p-2.5" placeholder=""
                required />
        </div>
        <div class="mb-4">
            <label for="image" class="block mb-2 text-sm font-medium text-gray-900">Image</label>
            <input type="file" id="image" name="Image"
                class="border border-gray-600 text-gray-900 text-sm rounded-lg block w-full p-2.5" placeholder=""
                required />
        </div>
        <button type="submit"
            class="text-white bg-custom-color-1 hover:bg-custom-color-2 focus:outline-none font-medium rounded-lg text-sm w-full px-5 py-2.5 text-center">Submit</button>
    </form>

</section>