    {{!-- Row 1 --}}
    <div class="bg-white">
        <div class="mx-auto max-w-2xl px-4 py-8 sm:px-6 lg:max-w-7xl lg:px-8">

            <h2 class="font-semibold pb-4 text-2xl">Top</h2>

            <div class="grid grid-cols-2 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 xl:gap-x-8 mt-4">
                {{#each products}}
                {{#ifEquals this.Category "product"}}
                <div>
                    <div
                        class="aspect-h-1 aspect-w-1 w-full overflow-hidden rounded-lg bg-gray-200 xl:aspect-h-16 xl:aspect-w-16">
                        <img src="{{this.ImagePath}}"
                            alt="Tall slender porcelain bottle with natural clay textured body and cork stopper."
                            class="h-full w-full object-cover object-center group-hover:opacity-75">
                    </div>
                    <div class="flex justify-between items-start mt-4">
                        <div class="flex-1">
                            <h3 class="text-xs sm:text-sm text-gray-700 line-clamp-1">{{this.Name}}</h3>
                            <p class="mt-1 text-sm sm:text-base font-medium text-gray-900">₹{{this.Price}}</p>
                        </div>
                        <div class="ml-2 flex flex-col items-end">
                            <span class="text-xs text-gray-500 hidden sm:inline-block">{{this.Category}}</span>
                            {{#if ../user}}
                            <button onclick="addToCart('{{this._id}}')" class="mt-1 bg-custom-color-1 hover:bg-custom-color-2 text-white font-medium py-1 px-2
            rounded text-xs sm:text-sm flex items-center justify-center w-full sm:w-auto h-7">
                                Add to Cart
                            </button>
                            {{else}}
                            <a href="/login" class="w-full">
                                <button class="mt-1 bg-custom-color-1 hover:bg-custom-color-2 text-white font-medium py-1 px-2
                rounded text-xs sm:text-sm flex items-center justify-center w-full h-7">
                                    Add to Cart
                                </button>
                            </a>
                            {{/if}}
                        </div>
                    </div>
                </div>
                {{/ifEquals}}

                {{/each}}

                <!-- More products... -->
            </div>



        </div>
    </div>

