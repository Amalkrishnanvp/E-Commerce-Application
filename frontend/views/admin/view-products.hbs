<section>

    <div class="">
        <div class="flex flex-col sm:flex-row justify-between pb-3">
            <h2 class="text-xl md:text-2xl font-semibold mb-3 sm:mb-0">Products</h2>
            <div class="flex items-center">
                <a href="/admin/add-product"> <button type="button"
                        class="text-white bg-gray-800 hover:bg-gray-900 focus:outline-none focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-gray-700 dark:border-gray-700">Add
                        Product</button></a>
                <button id="deleteSelectedBtn" onclick="deleteSelectedProducts()"
                    class="ml-3 lg:ml-5 bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded-lg disabled:opacity-50 disabled:cursor-not-allowed ">
                    Delete Selected
                </button>
            </div>
        </div>
        <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
            <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                    <tr>
                        <th scope="col" class="px-6 py-3">
                            No
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Product name
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Category
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Price
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Image
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Action
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Delete
                        </th>
                        <th scope="col" class="px-6 py-3">
                            <input type="checkbox" id="selectAllCheckbox"
                                class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600">
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                    <tr
                        class="odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700">
                        <td class="px-6 py-4">
                            {{addOne @index}}
                        </td>
                        <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                            {{this.Name}}
                        </th>
                        <td class="px-6 py-4">
                            {{this.Category}}
                        </td>
                        <td class="px-6 py-4">
                            â‚¹{{this.Price}}
                        </td>
                        <td class="px-6 py-4">
                            <img style="width: 30px; height: 30px;" src=/{{this.ImagePath}} alt="Image Not Available">
                        </td>
                        <td class="px-6 py-4">
                            <a href="/admin/edit-product/{{this._id}}"
                                class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Edit</a>
                        </td>
                        <td class="px-6 py-4">
                            <a href="/admin/delete-product/{{this._id}}"
                                class="font-medium text-red-600 dark:text-red-500 hover:underline delete-btn"
                                onclick="event.preventDefault(); if(confirm('Are you sure you want to delete {{this.Name}}?')) { window.location.href = this.href; }">Delete</a>
                        </td>
                        <td class="px-6 py-4">
                            <input type="checkbox"
                                class="product-checkbox w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600"
                                name="selectedProducts" value="{{this._id}}">
                        </td>
                    </tr>

                    {{/each}}

                </tbody>
            </table>
        </div>
    </div>

</section>