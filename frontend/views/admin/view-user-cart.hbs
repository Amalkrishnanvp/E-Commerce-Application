<section class="bg-white antialiased p-4">
    <div class="w-full">
        <h3 class="text-2xl font-semibold text-gray-900 mb-6">Products</h3>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            {{#each userCartProducts}}
            <div class="flex flex-col h-full rounded-lg border border-gray-200 bg-gray-800 shadow-sm transition-all hover:shadow-md">
                <!-- Image container with aspect ratio -->
                <div class="relative pt-[100%] overflow-hidden rounded-t-lg">
                    <img 
                        class="absolute top-0 left-0 w-full h-full object-cover rounded-md px-4 pt-4 " 
                        src="/{{this.product.ImagePath}}" 
                        alt="{{this.product.Name}}"
                        loading="lazy"
                    />
                </div>
                
                <!-- Content -->
                <div class="px-4 pb-4 pt-3 flex-grow flex flex-col">
                    <div class="mb-2">
                        <h3 class="text-lg font-semibold text-white line-clamp-2">
                            {{this.product.Name}}
                        </h3>
                        <p class="text-sm text-gray-500 mt-1">
                            {{this.product.Category}}
                        </p>
                    </div>
                    
                    <div class="mt-auto">
                        <p class="text-lg font-bold text-white">
                            â‚¹{{this.product.Price}}
                        </p>
                        
                        <div class="mt-2">
                            <span class="inline-block w-full px-3 py-2 text-sm font-medium text-center text-white bg-gray-700 rounded-lg">
                                Quantity: {{this.quantity}}
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>