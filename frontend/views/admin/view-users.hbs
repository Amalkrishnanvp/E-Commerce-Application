<section>
    <div class="px-6 md:px-8 py-20 lg:py-8">
        <div class="flex justify-between pb-3">
            <h2 class="text-xl md:text-2xl font-semibold">Users</h2>
        </div>
        <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
            <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                    <tr>
                        <th scope="col" class="px-6 py-3">
                            No
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Name
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Email
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Cart
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {{#each users}}
                    <tr
                        class="odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700">
                        <td class="px-6 py-4">
                            {{addOne @index}}
                        </td>
                        <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                            {{this.name}}
                        </th>
                        <td class="px-6 py-4">
                            {{this.email}}
                        </td>


                        <td class="px-6 py-4">
                            <a href="/admin/edit-product/{{this._id}}"
                                class="font-medium text-blue-600 dark:text-blue-500 hover:underline">View Cart</a>
                        </td>
                        <td class="px-6 py-4">
                            <a href="/admin/delete-product/{{this._id}}"
                                class="font-medium text-red-600 dark:text-red-500 hover:underline delete-btn"
                                onclick="event.preventDefault(); if(confirm('Are you sure you want to delete {{this.Name}}?')) { window.location.href = this.href; }">Suspend</a>
                        </td>
                    </tr>

                    {{/each}}

                </tbody>
            </table>
        </div>
    </div>


</section>